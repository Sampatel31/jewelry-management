# Environment Variables for JewelMS Backend

# Server
PORT=5000
NODE_ENV=development
LOG_LEVEL=info

# Database (choose one)
DATABASE_URL=postgresql://jewelry_user:jewelry_pass@localhost:5432/jewelry_db
# OR individual vars:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=jewelry_db
# DB_USER=jewelry_user
# DB_PASSWORD=jewelry_pass

# Database type: 'postgres' (default) or 'sqlite'
DB_TYPE=postgres
SQLITE_PATH=~/.jewelry-manager/data.db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS — comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000

# Redis (optional — caching disabled gracefully if not set)
REDIS_URL=redis://localhost:6379

# Prometheus metrics protection token
METRICS_TOKEN=change-this-to-a-random-secret

# OpenAI (optional — rule-based fallback used if not set)
OPENAI_API_KEY=

# Backup settings
BACKUP_DIR=~/.jewelry-manager/backups
RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true
AUTO_BACKUP_CRON=0 2 * * *

# Electron
ELECTRON_ENV=development

# Security
SESSION_TIMEOUT_MINUTES=15
BILLING_PIN_REQUIRED=true
AUDIT_LOG_ENABLED=true

# Invoice numbering (financial-year-based)
INVOICE_PREFIX=INV
INVOICE_FINANCIAL_YEAR_START_MONTH=4

