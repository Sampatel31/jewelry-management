{
  "name": "shrigar-jewellers",
  "productName": "Shrigar Jewellers",
  "version": "1.0.0",
  "description": "Jewelry Management System for Shrigar Jewellers",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.shrigarjewellers.management",
    "productName": "Shrigar Jewellers",
    "copyright": "Â© 2024 Shrigar Jewellers",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "assets/**/*"
    ],
    "extraResources": [
      { "from": "../backend/dist", "to": "backend/dist" },
      { "from": "../frontend/.next", "to": "frontend/.next" },
      { "from": "../frontend/public", "to": "frontend/public" }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Shrigar Jewellers"
    }
  }
}
